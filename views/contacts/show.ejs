<!--views/contacts/show.ejs-->

<!DOCTYPE html>
<html lang="ko">
    <head>
        <%- include('../partials/head') %> <!--외부 .ejs파일 가져오기-->
    </head>
    <body>
        <%- include('../partials/nav') %>
        <div class="container contact contact-show">
            <h2>Show</h2>
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title"><%= contact.name%></h3>
                    <label>Email</label><span><%= contact.email %></span>
                    <br>
                    <label>Phone</label><span><%= contact.phone %></span>
                </div>
            </div>
            <div class="contact-menu mt-2">
                <a href="/contacts/<%= contact._id %>/edit">Edit</a>
                <form action="/contacts/<%= contact._id %>?_method=delete" method="post">
                    <a href="#n" class="btn btn-light" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
                </form>
            </div>
        </div>
    </body>
</html>